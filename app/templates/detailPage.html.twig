{% extends 'base.html.twig' %}
{% block body %}
    <a href="{{ path('rbc_news') }}" class="btn btn-primary">Все новости</a>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{ article.title }}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{ article.time }}, {{ article.category }}</h6>
            {% if article.img %}
                <img class="card-img-top" src="{{ article.img }}" alt="Card image cap">
            {% endif %}
            <p class="card-text">{{ article.body }}</p>
            <a href="{{ path('rbc_news') }}" class="btn btn-primary">К списку новостей</a>
        </div>
    </div>
{% endblock %}
